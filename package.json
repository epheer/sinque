{
  "name": "sinque",
  "version": "1.0.0",
  "description": "Lightweight TTML parser and timed-text rendering engine for the web",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/module.d.ts",
      "import": "./dist/module.js",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "module": "./dist/module.js",
  "types": "./dist/module.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/module.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/module.ts --format esm,cjs --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ttml",
    "karaoke",
    "player",
    "lyrics",
    "timed-text",
    "parser"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/epheer/sinque.git"
  },
  "homepage": "https://github.com/epheer/sinque.git#readme",
  "bugs": {
    "url": "https://github.com/epheer/sinque.git#issues"
  },
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
